<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alreadyHaveAccount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dogback">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoText="true"
        android:text="DoggyDate"
        android:textColor="#432929"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <EditText
        android:id="@+id/inputDogName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/inputbg"
        android:drawableLeft="@drawable/ic_baseline_pets_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Dog Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="#432929"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <EditText
        android:id="@+id/inputDogAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/inputbg"
        android:drawableLeft="@drawable/ic_baseline_exposure_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Dog Age"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="#432929"
        app:layout_constraintEnd_toEndOf="@+id/uploadButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/uploadButton"
        app:layout_constraintTop_toBottomOf="@+id/uploadButton" />

    <EditText
        android:id="@+id/inputDogSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/inputbg"
        android:drawableLeft="@drawable/ic_baseline_size_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Dog Size"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="#432929"
        app:layout_constraintEnd_toEndOf="@+id/inputDogAge"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputDogAge"
        app:layout_constraintTop_toBottomOf="@+id/inputDogAge" />

    <EditText
        android:id="@+id/inputDogTemperament"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/inputbg"
        android:drawableLeft="@drawable/ic_baseline_tag_faces_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Dog Temp"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="#432929"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/inputDogSize"
        app:layout_constraintStart_toStartOf="@+id/inputDogSize"
        app:layout_constraintTop_toBottomOf="@+id/inputDogSize" />

    <EditText
        android:id="@+id/inputDogBio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/inputbg"
        android:drawableLeft="@drawable/ic_baseline_create_24"
        android:drawablePadding="10dp"
        android:hint="Dog Bio..."
        android:inputType="textMultiLine|textPersonName"
        android:maxLines="20"
        android:minHeight="48dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="#432929"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/inputDogTemperament"
        app:layout_constraintStart_toStartOf="@+id/inputDogTemperament"
        app:layout_constraintTop_toBottomOf="@+id/inputDogTemperament" />

    <EditText
        android:id="@+id/inputDogBreed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/inputbg"
        android:drawableLeft="@drawable/ic_baseline_manage_search_24"
        android:drawablePadding="10dp"
        android:hint="Dog Breed"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="#432929"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/inputDogBio"
        app:layout_constraintStart_toStartOf="@+id/inputDogBio"
        app:layout_constraintTop_toBottomOf="@+id/inputDogBio" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:text="Create"
        app:iconTint="@color/Red"
        app:layout_constraintEnd_toEndOf="@+id/inputDogBreed"
        app:layout_constraintStart_toStartOf="@+id/inputDogBreed"
        app:layout_constraintTop_toBottomOf="@+id/inputDogBreed" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:text="Upload Photo"
        app:iconTint="@color/Red"
        app:layout_constraintEnd_toEndOf="@+id/inputDogName"
        app:layout_constraintStart_toStartOf="@+id/inputDogName"
        app:layout_constraintTop_toBottomOf="@+id/inputDogName" />

    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Create Profile Later..."
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/continueButton"
        app:layout_constraintStart_toStartOf="@+id/continueButton"
        app:layout_constraintTop_toBottomOf="@+id/continueButton" />

</androidx.constraintlayout.widget.ConstraintLayout>